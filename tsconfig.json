{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "declaration": false,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2021",
      "esnext.asynciterable",
      "es6"
    ],
    "types": [
      "node",
      "reflect-metadata"
    ],
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ]
}